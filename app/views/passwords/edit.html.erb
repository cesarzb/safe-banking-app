<%= form_with url: password_path(params[:password_reset_token]), scope: :user, method: :put, data: { controller: "password-edit-form" } do |form| %>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true, data: { target: "password-edit-form.password", action: "input->password-edit-form#validatePassword" } %>
    <div class="invalid-feedback"></div>
    <div data-target="password-edit-form.strengthMessage"></div>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, required: true, data: { target: "password-edit-form.passwordConfirmation", action: "input->password-edit-form#validatePasswordConfirmation" } %>
    <div class="invalid-feedback"></div>
  </div>

  <%= form.submit "Update Password" %>
<% end %>
